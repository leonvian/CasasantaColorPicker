<?xml version="1.0" encoding="utf-8"?>
 
<resources xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.lvc.casasantacolorpicker.Paperwall">
    
    
    <style name="layout_color_picker">
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">#babab8</item>
        <item name="android:orientation">vertical</item>
    </style>
    
     <style name="layout_color_picker_view">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="action">onClickChangeColorText</item>
    </style>
    
     <style name="layout_color_picker_view_background" parent="@style/layout_color_picker_view" >
        <item name="action">onClickChangeColorBackground</item>
    </style>
    

</resources>